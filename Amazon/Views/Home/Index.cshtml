@model ProductListViewModel

@{
    ViewData["Title"] = "Product List";
}

<h1 class=" text-center row mb-5">List of Products</h1>
<div class="col mb-3">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Create">New Product</a>
</div>

<div class="col mt-2">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>CategoryId</th>
                <th>CategoryName</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.CategoryId</td>
                    <td>@product.CategoryName</td>
                    <td>
                        <div class="button-container">
                            <form asp-controller="Home" asp-action="Edit" asp-route-id="@product.ProductId" method="Get">
                                <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                            </form>

                            <form asp-controller="Home" asp-action="Delete" asp-route-id="@product.ProductId" method="post">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })" class="btn btn-secondary btn-sm">Previous</a>
        }

        <span>Page @Model.CurrentPage of @Model.TotalPages</span>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })" class="btn btn-secondary btn-sm">Next</a>
        }
    </div>
</div>

<style>
    .pagination {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
    }

        .pagination a {
            text-decoration: none;
            padding: 5px 15px;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
        }

            .pagination a:hover {
                background-color: #0056b3;
            }

        .pagination span {
            padding: 5px 10px;
            font-size: 14px;
            align-self: center;
        }
    /* Container to align forms horizontally */
    .button-container {
        display: flex;
        gap: 10px; /* Space between buttons */
        align-items: center; /* Center buttons vertically */
    }

    /* Ensure buttons inside the forms look consistent */
    button {
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }



    /* Button colors */
    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Optional: Customize the button size for small buttons */
    .btn-sm {
        font-size: 12px;
        padding: 5px 10px;
    }
</style>









