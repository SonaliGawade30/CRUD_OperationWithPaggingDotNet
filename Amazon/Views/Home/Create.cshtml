@model Amazon.Models.ProductDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Product</h2>

        <form method="post" enctype="multipart/form-data" asp-controller="Home">
            <div class="row mt-3 mb-5">
                <label class="col-sm-4 col-form-label">Product Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3 mb-5">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" id="CategoryId" name="CategoryId" required asp-for="CategoryName">
                        <option value="">Select Category</option>
                        @foreach (var category in ViewBag.Categories as SelectList)
                        {
                           <option value="@category.Value" >@category.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary" id="cancelButton">Cancle</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    document.getElementById('cancelButton').addEventListener('click', function() {
        // Redirect to Index page of Products controller
        window.location.href = '/Home/Index'; // Adjust path if needed
    });
</script>