@model Amazon.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Category</h2>
        <form asp-action="Edit" method="post" enctype="multipart/form-data" asp-controller="Category">
            
            <div class="row mt-3 mb-5">
                <label class="col-sm-4 col-form-label">ProductId</label>
                <div class="col-sm-8">
                    <!-- Hidden input for CategoryId -->
                    <input type="hidden" asp-for="CategoryId" />
                    <input class="form-control-plaintext" readonly value="@ViewBag.CategoryId" />
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3 mb-5">
                <label class="col-sm-4 col-form-label">Category Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="CategoryName" asp-for="CategoryName" value="@Model.CategoryName" required />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary" id="cancelButton"> <a href="@Url.Action("Index")" class="btn btn-primary">Cancel</a></button>
                </div>
            </div>
        </form>
    </div>
</div>