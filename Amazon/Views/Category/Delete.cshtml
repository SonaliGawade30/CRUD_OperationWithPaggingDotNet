@model Amazon.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Are you sure you want to delete this category?</h2>
        

            <div class="row mt-3 mb-5">
                <label class="col-sm-4 col-form-label">Category Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="CategoryName" asp-for="CategoryName" value="@Model.CategoryName" required />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
        <form method="post">
            <div class="row mt-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-danger">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <button type="submit" class="btn btn-secondary" id="cancelButton"> <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a></button>
                </div>
            </div>
        </form>
    </div>
</div>